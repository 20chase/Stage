# the size of a pixel in Stage's underlying raytrace model in meters
resolution     0.02 

# optionally tune the medium and high matrix pixel sizes
#resolution_med  0.2
#resolution_low  1.0

interval_sim 100  # milliseconds per update step
interval_real 30 # real-time milliseconds per update step

# defines Pioneer-like robots
include "pioneer.inc"



# defines 'map' object used for floorplans
include "map.inc"



# window_size doesn't work, thanks to broken rtk_canvas_size()
#
window( size [ 824.000 595.000 ] center [-8.049 1.161] scale 0.021 )

map(
  #size [15.5 11.4]
  #bitmap "bitmaps/autolab.png"
  #bitmap "bitmaps/sal2.png"
  #bitmap "bitmaps/cave.png"
  bitmap "bitmaps/hospital_section.png"

  bitmap_resolution 0.03
  boundary 0
)


define sicklaser laser
(
  range_min 0.0
  range_max 8.0
  fov 180.0
  samples 180

  color "LightBlue"
  size [ 0.14 0.14 ]	
)

# extend the pioneer2dx definition from pioneer.inc
#
define laserpioneer pioneer2dx
(
  sicklaser(  fiducialfinder( color "green" obstacle 0 ) )
  blobfinder()

  fiducial_id 42
)


laserpioneer
(
  name "p0"
  pose [-12.320 2.233 -333.684]
)

laserpioneer
(
  color "green"
  name "p1"
  pose [-5.127 2.584 -162.098]
)

laserpioneer
(
  color "blue"
  name "p2"
  pose [-4.717 1.938 -194.220]
)




HOSTS=nw0:nw4

IFS=:

# $1 is the world file

for HOST in $HOSTS
do
	ssh $HOST /usr/X11R6/bin/xterm -title Stage@$HOST -e ~/run -xs $1 &
	#ssh $HOST /bin/bash --login ~/run $1 &
done

xterm -title Stage@localhost -e ~/PS/stage/tools/run $1 &


sleep 8

# fix this later
manager localhost nw0 nw4 1> /dev/null


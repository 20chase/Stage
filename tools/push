HOSTS="nw0:nw4"
# grab the files from the command line
FILES=$1

# add more standard files
#FILES=~/PS/player/src/player:~/PS/stage/bin/stage:$FILES
#FILES=~PS/stage/examples/simple.world:$FILES
#FILES=~/PS/stage/examples/cave.pnm.gz:$FILES
#FILES=bin/xs:$FILES

# set the separator
IFS=:

for HOST in $HOSTS
do
    echo $HOST
#	ssh $HOST -uname -a

    # copy the files
    for FILE in $FILES
    do
	echo $FILE
	scp $FILE $HOST:
    done
done
